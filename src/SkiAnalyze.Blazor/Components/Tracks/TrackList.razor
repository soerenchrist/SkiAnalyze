@if (Tracks != null)
{
    <MudTable
        Items="@Tracks"
        Hover="true"
        Elevation="0"
        Loading="@Loading">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Date</MudTh>
            <MudTh>Distance</MudTh>
            <MudTh>Elevation</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Date">@context.Date.ToShortDateString()</MudTd>
            <MudTd DataLabel="Distance">@((context.TotalDistance / 1000).ToString("F")) km</MudTd>
            <MudTd DataLabel="Elevation">@((-1 * context.TotalElevation).ToString("F2")) m</MudTd>
        </RowTemplate>
    </MudTable>    
}


@code {
    [Parameter] 
    public List<TrackDto>? Tracks { get; set; }
    
    [Parameter] 
    public bool Loading { get; set; }
}